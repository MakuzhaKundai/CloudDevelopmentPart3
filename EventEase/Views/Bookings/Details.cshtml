@{
}
@model EventEase.Models.ViewModels.BookingDetailsViewModel
@{
    ViewData["Title"] = "Booking Details";
}

<div>
    <h4>Booking Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Booking ID</dt>
        <dd class="col-sm-10">@Model.BookingId</dd>

        <dt class="col-sm-2">Event</dt>
        <dd class="col-sm-10">@Model.EventName</dd>

        <dt class="col-sm-2">Venue</dt>
        <dd class="col-sm-10">@Model.VenueName</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>

        <dt class="col-sm-2">Event Date</dt>
        <dd class="col-sm-10">@Model.EventDate.ToString("g")</dd>

        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">@Model.CustomerName</dd>

        <dt class="col-sm-2">Contact</dt>
        <dd class="col-sm-10">@Model.CustomerContact</dd>

        <dt class="col-sm-2">Booking Date</dt>
        <dd class="col-sm-10">@Model.BookingDate.ToString("g")</dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>