@{
}
@model IEnumerable<EventEase.Models.ViewModels.BookingDetailsViewModel>
@{
    ViewData["Title"] = "Bookings";
}

<h1>Bookings</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.BookingId)</th>
            <th>@Html.DisplayNameFor(model => model.EventName)</th>
            <th>@Html.DisplayNameFor(model => model.VenueName)</th>
            <th>@Html.DisplayNameFor(model => model.EventDate)</th>
            <th>@Html.DisplayNameFor(model => model.CustomerName)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.BookingId)</td>
                <td>@Html.DisplayFor(modelItem => item.EventName)</td>
                <td>@Html.DisplayFor(modelItem => item.VenueName)</td>
                <td>@Html.DisplayFor(modelItem => item.EventDate)</td>
                <td>@Html.DisplayFor(modelItem => item.CustomerName)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.BookingId" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.BookingId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>