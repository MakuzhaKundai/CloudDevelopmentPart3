@{
}
@model IEnumerable<EventEase.Models.ViewModels.BookingDetailsViewModel>

@{
    ViewData["Title"] = "Advanced Search";
}

<h1>Advanced Search</h1>

<form asp-action="AdvancedSearch" method="get">
    <div class="form-row">
        <div class="form-group col-md-3">
            <label>Event Type</label>
            <select name="EventTypeId" class="form-control" asp-items="ViewBag.EventTypes">
                <option value="">All Types</option>
            </select>
        </div>
        <div class="form-group col-md-3">
            <label>From Date</label>
            <input type="date" name="StartDate" class="form-control" />
        </div>
        <div class="form-group col-md-3">
            <label>To Date</label>
            <input type="date" name="EndDate" class="form-control" />
        </div>
        <div class="form-group col-md-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="VenueAvailable" value="true" />
                <label class="form-check-label">Show Available Venues Only</label>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
    <a asp-action="AdvancedSearch" class="btn btn-secondary">Reset</a>
</form>

<table class="table mt-4">
    <thead>
        <tr>
            <th>Event</th>
            <th>Type</th>
            <th>Venue</th>
            <th>Date</th>
            <th>Customer</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EventName</td>
                <td>@item.EventType</td>
                <td>@item.VenueName</td>
                <td>@item.EventDate.ToString("d")</td>
                <td>@item.CustomerName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.BookingId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>