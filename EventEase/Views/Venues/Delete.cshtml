@{
}
@model EventEase.Models.Venue

@{
    ViewData["Title"] = "Delete Venue";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h4>Delete Venue</h4>
        </div>
        <div class="card-body">
            <h5>Are you sure you want to delete this venue?</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Venue Name</dt>
                <dd class="col-sm-9">@Model.VenueName</dd>

                <dt class="col-sm-3">Location</dt>
                <dd class="col-sm-9">@Model.Location</dd>

                <dt class="col-sm-3">Capacity</dt>
                <dd class="col-sm-9">@Model.Capacity.ToString("N0")</dd>

                <dt class="col-sm-3">Image</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="img-thumbnail" style="max-width: 200px;">
                    }
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="VenueId" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>